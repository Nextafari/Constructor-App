<% provide(:title, "User Sign up") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <%= form_for @user do |f| %>
          <%= f.label :name %>
          <%= f.textfield :name, class:'form-control' %>
          
          <%= f.label :email %>
          <%= f.email_field :email, class:'form-control' %>
          
          <%=f.label :password %>
          <%= f.password_field :password, class:'form-control' %>
          
          <%= f.submit "Sign up", class:'btn btn-primary btn-md' %>
        <% end %>
      </div>
    </div>
  </div>
</div>